 <div class="contents">
<% if user_signed_in?  %>

 

 <div class="school-name">초등학교</div>

  <div class="elementary">
   <% @primary_school_list.where(school_name: @primary, school_option: "primary" ).each do |list_primary|%>
   <div class="card border-primary mb-3" style="max-width: 18rem;">
      <div class="card-header"><%= list_primary.school_name %>초등학교</div>
       <div class="card-body text-primary">
        <h5 class="card-title"><%= list_primary.find_user_name %>를 찾습니다.</h5>
        <p class="card-text"><%= list_primary.content %></p>
       </div>
     <div style="display: flex; justify-content: flex-end;">
      <a href="/school_lists/show/<%=list_primary.id%>" style="margin-left: 10px;">보기</a> 
      <%if list_primary.my_info_id== current_user.id%>
       <a href="/school_lists/edit/<%= list_primary.id %>"style="margin-left: 10px;">수정</a>
       <a href="/school_lists/destroy/<%= list_primary.id %>"style="margin-left: 10px;">삭제</a>
      <%end%>
     </div>
   </div>
   <%end%>

    <div class="friends-list">초등학교 동창 <br>
    <% MyInfo.where(myInfo_primary1: @primary).or(MyInfo.where(myInfo_primary2: @primary)).or(MyInfo.where( myInfo_primary3: @primary)).or(MyInfo.where( myInfo_primary4: @primary)).or(MyInfo.where( myInfo_primary5: @primary)).or(MyInfo.where( myInfo_primary6: @primary)).each do |primary_users|%>
      <% if primary_users.user_id == current_user.id%>
        <%next%>
        <% end %>
        <%=primary_users.myInfo_username%>
      <hr>
      
    <%end%>
    
    </div>
 
 
  </div>

<div class="pagynavv" style="margin-left:350px;">
 <%== pagy_nav(@primary_pagy)%>
</div>

 <div class="school-name">중학교</div>
 <div class="middle">
<% @middle_school_list.where(school_name: @middle, school_option: "middle" ).each do |list_middle|%>
  
    <div class="card border-primary mb-3" style="max-width: 18rem;">
      <div class="card-header"><%= list_middle.school_name %>중학교</div>
       <div class="card-body text-primary">
        <h5 class="card-title"><%= list_middle.find_user_name %>를 찾습니다.</h5>
        <p class="card-text"><%= list_middle.content %></p>
       </div>
       <div style="display: flex; justify-content: flex-end;">
    <a href="/school_lists/show/<%=list_middle.id%>" style="margin-left: 10px;">보기</a> 
     <%if list_middle.my_info_id== current_user.id%>
    <a href="/school_lists/edit/<%= list_middle.id %>"style="margin-left: 10px;">수정</a>
    <a href="/school_lists/destroy/<%= list_middle.id %>"style="margin-left: 10px;">삭제</a>
    <%end%>
    </div>
     </div>
   <%end%> 

    <div class="friends-list">중학교 동창<br>
    <% MyInfo.where(myInfo_middle1: @middle).or(MyInfo.where(myInfo_middle2: @middle)).or(MyInfo.where(myInfo_middle3: @middle)).each do |middle_users|%>
  <% if middle_users.user_id == current_user.id%>
    <%next%>
   <% end %>
   <%=middle_users.myInfo_username%> 
   <hr>
   
<%end%>
 
    </div>
    

  </div>
  <div class="pagynavv" style="margin-left:350px;">
    <%== pagy_nav(@middle_pagy)%>
    </div>
  <div class="school-name">고등학교</div>

  <div class="high">
   <% @high_school_list.each do |list_high|%>
    <div class="card border-primary mb-3" style="max-width: 18rem;">
      <div class="card-header"><%= list_high.school_name %>고등학교</div>
       <div class="card-body text-primary">
        <h5 class="card-title"><%= list_high.find_user_name %>를 찾습니다.</h5>
        <p class="card-text"><%= list_high.content %></p>
       </div>
       <div style="display: flex; justify-content: flex-end;">
    <a href="/school_lists/show/<%=list_high.id%>" style="margin-left: 10px;">보기</a> 
     <%if list_high.my_info_id== current_user.id%>
    <a href="/school_lists/edit/<%= list_high.id %>"style="margin-left: 10px;">수정</a>
    <a href="/school_lists/destroy/<%= list_high.id %>"style="margin-left: 10px;">삭제</a>
    <%end%>
    </div>
     </div>
     <%end%>


    <div class="friends-list">고등학교 동창<br>
