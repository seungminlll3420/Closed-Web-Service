<h3>글쓰기</h3>

<div class="main">
    <div class="card-item">
        <form action="/school_lists/create" method="POST" enctype="multipart/form-data">
            <div class="top">
                <div class="top_1">
                    <select name="school_name" class="select">
                        <%for @primary_num in 0..5  %>
                            <% if @primary[@primary_num] != @primary[@primary_num+1]  %>
                              <option class="class_primary" value="<%=@primary[@primary_num]%>"><%=@primary[@primary_num]%></option>
                            <%end  %>
                        <% end  %>
                         
                        <%for @middle_num in 0..2  %>
                            <% if @middle[@middle_num] != @middle[@middle_num+1]  %>
                              <option class="class_middle" value="<%=@middle[@middle_num]%>"><%=@middle[@middle_num]%></option>
                            <%end  %>
                        <% end  %>
                        
                        <%for @high_num in 0..2  %>
                            <% if @high[@high_num] != @high[@high_num+1]  %>
                              <option class="class_high" value="<%=@high[@high_num]%>"><%=@high[@high_num]%></option>
                            <%end  %>
                        <% end  %>
                    </select>
                   
                      <select id="class_school" name="school_option" class="select">
                        <option value="primary">초등학교</option>
                        <option value="middle">중학교</option>
                        <option value="high">고등학교</option>
                    </select>
                </div>
            </div>
             <div class="middle">
                <div class="middle_1">
                    <div class="middle_1_1">
                    <label for="find_user_name_" style="font-size: 30px ">찾는 사람 : </label>
                    <input type="text" name="find_user_name" id="find_user_name_" style="width: 100px; height: 30px; margin-left: 10px;">
                    <br>
                    <label for="find_user_key_" style="font-size: 30px; margin-left: 20px;"> 키워드 : </label>    
                    <input type="text" name="find_user_key" id="find_user_key_" style="width: 100px; height: 30px; margin-left: 10px;"> 
                    <br>
                    </div>
                    <div class="middle_1_2">
                    <label for="content_"style="font-size: 30px;"> 사연 : </label>    
                    <br>
                    <input type="text" name="content" id="content_" style="width: 800px; height: 300px; margin-left: 10px;"> 
                    </div>
                    <br>
                    <button id="ww" type="submit" style="margin-left: 750px; width: 100px; height: 30px; display: flex; justify-content: center; ">제출</button>
                </div>
            </div>
            <script> 
            
        
            $(".class_middle").hide(); 
            $(".class_high").hide(); 
         
            $("#class_school").change(function() {
                if ($(this).val() == "primary"){
                    $(".class_primary").show(); 
                    $(".class_middle").hide(); 
                    $(".class_high").hide();
                }else if($(this).val() == "middle"){
                    $(".class_primary").hide(); 
                    $(".class_middle").show(); 
                    $(".class_high").hide(); 
                }else if($(this).val() == "high"){
                    $(".class_primary").hide(); 
                    $(".class_middle").hide(); 
                    $(".class_high").show(); 
                }
            });
        
        
         
             </script>
        
